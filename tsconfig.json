{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "typings/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx"
, "App.vue.ts"  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "packages/*"
      ]
    }
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
